<import src="/components/templates.wxml" />
<block wx:if="{{user}}">
  <template is="profile" data="{{user}}" />
  <view class="section">
    <view class="list">
      <template is="list_item" data="{{...direct_messages, badge: notis.direct_messages}}" />
      <template wx:if="{{notis.friend_requests}}" is="list_item" data="{{...friend_requests, badge: notis.friend_requests}}" />
    </view>
  </view>
  <view class="section">
    <view class="list">
      <template is="list_item" data="{{...change_profile}}" />
      <template is="list_item" data="{{...logout}}" />
    </view>
  </view>
  <view class="footer" catchtap="tapLink" data-link="https://github.com/fanfoujs/fanfou-weapp">
    <image mode="aspectFit" style="height: 16px; width: 16px;" src="../../assets/octicons-code.svg" />
    <text>with</text>
    <image mode="aspectFit" style="height: 16px; width: 12px;" src="../../assets/octicons-heart.svg" />
    <text>on</text>
    <image mode="aspectFit" style="height: 16px; width: 41px;" src="../../assets/octicons-logo-github.svg" />
  </view>
  <template is="notibar" data="{{notis}}" />
</block>
<template is="bottom" />
